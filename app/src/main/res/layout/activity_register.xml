<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_gray"
    android:orientation="vertical">

    <include layout="@layout/common_top" />

    <ScrollView style="@style/scrollview_common">

        <LinearLayout style="@style/linear_common">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="20dp"
                    android:gravity="top"
                    android:text="*"
                    android:textColor="#ffff7f00"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="注册信息需与车管所登记信息一致。若您的信息与车管所登记的信息不一致，请及时到车管所更新"
                    android:textColor="#ffff7f00"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                style="@style/linear_common"
                android:background="@color/white">

                <RelativeLayout style="@style/relate_common_item">

                    <TextView
                        style="@style/relate_item_text"
                        android:text="姓名" />

                    <EditText
                        android:id="@+id/edit_name"
                        style="@style/relate_text_right"
                        android:background="@color/transparent"
                        android:hint="请输入真实姓名"
                        android:singleLine="true" />
                </RelativeLayout>

                <View style="@style/item_view" />

                <RelativeLayout style="@style/relate_common_item">

                    <TextView
                        style="@style/relate_item_text"
                        android:text="身份证号码" />

                    <EditText
                        android:id="@+id/edt_id_card_no"
                        style="@style/relate_text_right"
                        android:background="@color/transparent"
                        android:hint="请输入身份证号码"
                        android:singleLine="true" />
                </RelativeLayout>

                <View style="@style/item_view" />

                <RelativeLayout style="@style/relate_common_item">

                    <TextView
                        style="@style/relate_item_text"
                        android:text="手机号码" />

                    <EditText
                        android:id="@+id/edit_mobile_phone"
                        style="@style/relate_text_right"
                        android:background="@color/transparent"
                        android:hint="请输入手机号码"
                        android:singleLine="true" />
                </RelativeLayout>
                <RelativeLayout style="@style/relate_common_item">

                    <TextView
                        style="@style/relate_item_text"
                        android:text="所在单位" />

                    <TextView
                        android:id="@+id/tv_mobile_unit"
                        style="@style/relate_text_right"
                        android:background="@color/transparent"
                        android:hint="请选择所在单位"
                        android:singleLine="true" />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:padding="16dp"
                    android:text="设置密码"
                    android:background="#dddd"
                    android:textColor="#ffff7f00"
                    android:textSize="12sp" />
                <RelativeLayout style="@style/relate_common_item">

                    <TextView
                        style="@style/relate_item_text"
                        android:text="设置密码" />

                    <EditText
                        android:id="@+id/et_mobile_password"
                        style="@style/relate_text_right"
                        android:background="@color/transparent"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:singleLine="true" />
                </RelativeLayout>
                <RelativeLayout style="@style/relate_common_item">

                    <TextView
                        style="@style/relate_item_text"
                        android:text="确认密码" />

                    <EditText
                        android:id="@+id/et_mobile_passwords"
                        style="@style/relate_text_right"
                        android:background="@color/transparent"
                        android:hint="请确认密码"
                        android:inputType="textPassword"
                        android:singleLine="true" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_register"
                style="@style/business_submit"
                android:text="注   册" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1">

                    <CheckBox
                        android:id="@+id/register_agree"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:background="@null"
                        android:button="@null"
                        android:checked="false"
                        android:drawableLeft="@drawable/bg_login_checkbox"
                        android:drawablePadding="4dp"
                        android:text="已阅读并同意"
                        android:textColor="@color/top_text_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_register_protocol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/register_agree"
                        android:text="长沙交警使用协议"
                        android:textColor="@color/back_title_blue"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>